{
    "version": 2,
    "shared": {
        "notification_email": "storm-devel@yahoo-inc.com",
        "build_timeout": 60
    },
    "jobs": {
        "component": {  
            "test_results_type": "junit",
            "coverage_type": "none",
            "build" : {
                "publish" : {
                    "before" : [
                        "cp -v yahoo-build/ystorm-`cat $SRC_DIR/yahoo-build/RELEASE | sed -e 's|-|_|g'`-rhel-6.x.tgz ${AUTO_PUBLISH_DIR}/"
                    ],
                    "task": "dist-install",
                    "branch": "quarantine",
                    "required": true,
                    "group": "hadoopqa",
                    "type": "release",
                    "after" : [
                        "git tag -f -a `cat $SRC_DIR/yahoo-build/RELEASE` -m \"yahoo version `cat $SRC_DIR/yahoo-build/RELEASE`\"",
                        "git push origin `cat $SRC_DIR/yahoo-build/RELEASE`",
                        "${SRC_DIR}/internal/QATools/storm_tag_master_launcher",
			"pipeline-log-event --this_task \"screwdriver|screwdriver.corp.yahoo.com:${PROJECT_ID}|${BUILD_NUMBER}\" --input_object \"git|${GIT_URL}|${GIT_COMMIT}\" --output-object \"yinst|ystorm|`cat $SRC_DIR/yahoo-build/RELEASE`\" --next-task \"screwdriver|screwdriver.corp.yahoo.com:61235\""
                    ]
                },
                 "remote_trigger": {
                     "url": "http://jenkins.screwdriver.corp.yahoo.com:9999/jenkins/job/61235-ystorm_test_topologies-trunk-component/",
                     "params": { }
                }
            }
        }
    }
}
